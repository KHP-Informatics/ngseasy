#!/usr/bin/env bash
set -o errexit
set -o nounset
################################################################
# Program: ngseasy_initiate_project
# Version 1.0 
# Author: Stephen Newhouse (stephen.j.newhouse@gmail.com); Amos Folarin (amosfolarin@gmail.com)
###########################################################################################
